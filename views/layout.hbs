        crossorigin="anonymous"></script>
</head>

<body class="container-fluid">
    <header class="container-fluid">
        <section id="heading">
            <div class="col-3">
                <img id="logoImage" src="/images/HELV_logo_blue_sm.png" alt="Logo" width="50" height="50">
            </div>
            <div class="col-6">
                <h1 id="title">Vinci court</h1>
            </div>
            <div class="col-3">
                {{#if (eq session.connected true)}}
                <form action="users/logout" method="post">
                    <button type="submit"></button>
                </form>
                {{else}}
                <a href="/users/register">Create an account</a>
                <a href="/users/login">Login</a>
                {{/if}}
            </div>
        </section>
        <nav class="navbar navbar-expand-xl">
            <div class="container-fluid">
                <!-- Navigation Links -->
                <div class="collapse navbar-collapse justify-content-center" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/">
                                <p>Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/tournaments">
                                <p>Tournaments</p>
                            </a>
                        </li>
                        <li>
                            <a href="/courts">
                                <p>Courts</p>
                            </a>
                        </li>
                        <li>
                            <a href="/coaches">
                                <p>Coaches</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    {{{body}}}
    <footer class="container-fluid">
        <p id="credits">
            <strong>©2024 Vinci Court</strong> | Tous droits réservés. Toute utilisation non autorisée du matériel
            trouvé sur ce site est interdite.
        </p>
    </footer>
</body>

</html>